DROP TABLE userlogintoken;

CREATE TABLE userlogintoken (
	id int NOT NULL AUTO_INCREMENT, 
	email VARCHAR(50) NOT NULL,
	generated_token VARCHAR(50) NOT NULL,
	token_expired BIT,
	PRIMARY KEY(id),
	CONSTRAINT uniqueToken UNIQUE (generated_token)
);

