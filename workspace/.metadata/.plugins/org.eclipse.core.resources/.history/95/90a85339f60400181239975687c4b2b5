//					System.out.format("%3d|\t%-10s - %-10s - %s\n", j++, dataString, messages.get(i).getUsername(),
//							messages.get(i).getTextMessage());
//				}
//				data = messages.get(messages.size() - 1).getTimeStamp();
//				System.out.println("------------------------------------------------------------------------");	
////			}
//
