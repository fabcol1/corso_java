package esempi;

public class StampaParametro {

	public static void main(String[] args) {
		
		System.out.println(args[0] + " " + args[1] + " " + args[2]);
		
		
	}
	
	public void esercizio1(String[] args) {
		for(String s : args) {
			if(s!=null) {
				System.out.print(s + " " );
			}
		}
	}
	
	public void esercizio2(String[] args) {
		for(String s : args) {
			if(s!=null) {
				int x = 0;
				try {
					x = Integer.parseInt(s);
				} catch (Exception e) {
					
				}
				System.out.print(x + " " );
			}
		}
	}
	
	public void esercizio3(String[] args) {
		if(args[2]==null) {
			System.out.println("nessuna operazione disponibile");
			return;
		}
		double risultato;
		
		switch(args[2]) {
		case "somma" : 
			risultato = Integer.parseInt(args[0]) + Integer.parseInt(args[1]);
			System.out.println("Risultato: " + risultato);
			break;
		case "sottrazione" :
			risultato = Integer.parseInt(args[0]) - Integer.parseInt(args[1]);
			break;
		case "moltiplicazione" :
			risultato = Integer.parseInt(args[0]) * Integer.parseInt(args[1]);
			break;
		case "divisione" :
			risultato = Integer.parseInt(args[0]) / Integer.parseInt(args[1]);
			break;
		default: 
			System.out.println("nessuna operazione disponibile");
			break;
		}
	}

}

// 1 - inserisco 3 stringhe
// 2 - inserisco 3 numeri
// 3 - inserisco 2 numeri + stringa che identifica tipo di operazione + - / * %