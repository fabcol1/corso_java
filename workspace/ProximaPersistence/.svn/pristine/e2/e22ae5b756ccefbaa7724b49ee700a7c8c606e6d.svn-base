<div class="container">
	<div class="alert alert-danger" role="alert" ng-if="errorMessage">
		{{errorMessage}}</div>
	<div class="panel panel-default ">
		<div class="alert alert-success">
			<span class="lead">Update Existing User</span>
			<p>Please maintain uniqueness of User-Name</p>
		</div>
		<div class="panel-body ">
			<div class="container">
				<form ng-submit="submitUserForm()" name="myForm"
					class="form-horizontal">
					<div class="row">
						<div class="form-group col-md-12">
							<label class="col-md-2 control-lable" for="uname">
								Firstname </label>
							<div class="col-md-7">
								<input type="text" ng-model="user.firstname" id="uname"
									class="form-control input-sm" placeholder="Enter user name" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-12">
							<label class="col-md-2 control-lable" for="lastname">LastName</label>
							<div class="col-md-7">
								<input type="text" ng-model="user.lastname" id="lastname"
									class="form-control input-sm" placeholder="Enter User LastName" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-12">
							<label class="col-md-2 control-lable" for="email">Email</label>
							<div class="col-md-7">
								<input type="email" ng-model="user.email" id="email"
									class="form-control input-sm" placeholder="Enter User Email" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-12">
							<label class="col-md-2 control-lable" for="dateofbirth">Date
								of Birth</label>
							<div class="col-md-7">
								<input type="text" ng-model="user.dateofbirth" id="dateofbirth"
									class="form-control input-sm" placeholder="Enter Date of Birth" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-12">
							<label class="col-md-2 control-lable" for="imgpath">Image</label>
							<div class="col-md-7">
								<input type="text" ng-model="user.imgpath" id="imgpath"
									class="form-control input-sm" placeholder="Enter User Image" />
							</div>
						</div>
					</div>
					
					<div class="row">
						<div class="form-group col-md-12">
							<label class="col-md-2 control-lable" for="password">Password</label>
							<div class="col-md-7">
								<input type="text" ng-model="user.password" id="password"
									class="form-control input-sm" placeholder="Enter User Password" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-actions floatRight">
							<input type="submit" value="Update User"
								class="btn btn-primary btn-sm">
						</div>
					</div>
				</form>
				<div class="row">
						<div class="form-group col-md-12">
							<label class="col-md-2 control-lable">Upload user image</label>
							<div class="col-md-7">
								<input type="file" file-model="myFile" accept=".jpg,.png"/>
								<button ng-click="uploadFile()">upload image</button>
									<div class="alert alert-danger fade show" ng-if="uploadError"><a class="close" data-dismiss="alert"></a> <strong>{{uploadErrorText}}</strong></div>
									<div class="alert alert-success fade show" ng-if="uploadSucces"><a class="close" data-dismiss="alert"></a> <strong>{{uploadSuccesText}}</strong></div>
							</div>
						</div>
					</div>
			</div>
		</div>
	</div>
</div>